generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique
  hash  String

  expenses Expense[]

  @@map("users")
}

model Expense {
  id          Int        @id @default(autoincrement())
  amount      Float
  description String?
  category    Categories @default(Others)
  date        DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  User        User       @relation(fields: [userId], references: [id])
  userId      Int

  @@map("expenses")
}

enum Categories {
  Groceries
  Leisure
  Electronics
  Utilities
  Clothing
  Health
  Others
}
